{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "jsx": "react"
  },
  "include": [
    "src/index.tsx",
    "src/**/*"
  ]
}